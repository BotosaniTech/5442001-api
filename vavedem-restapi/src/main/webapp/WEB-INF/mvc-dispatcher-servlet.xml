   <beans xmlns="http://www.springframework.org/schema/beans"
           xmlns:context="http://www.springframework.org/schema/context"
           xmlns:mvc="http://www.springframework.org/schema/mvc" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
                               http://www.springframework.org/schema/beans     
                               http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
                               http://www.springframework.org/schema/context 
                               http://www.springframework.org/schema/context/spring-context-4.3.xsd
                               http://www.springframework.org/schema/mvc
                               http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">

 
    <mvc:annotation-driven />
    <context:component-scan base-package="ro.vavedem"/>
    
    <bean id="primarieService" class="ro.vavedem.services.PrimarieServiceImpl"></bean>
    <bean id="primarieRepository" class="ro.vavedem.persistence.repository.PrimarieRepositoryImpl"></bean>
                
    
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
            <value>classpath:config.properties</value>
        </property>
    </bean>
        
    <bean id="dbConfig" class="ro.vavedem.persistence.properties.MongoPropertiesBean">
        <property name="username" value="${username}" />
        <property name="password" value="${password}" />
        <property name="host" value="${host}"/>
        <property name="port" value="${port}" />
        <property name="database" value="${database}" />
    </bean>
        
    <bean id="persistenceConnection" class="ro.vavedem.persistence.PersistenceConnectionImpl">
        <constructor-arg index="0" ref="dbConfig" />
    </bean>
        
</beans>
